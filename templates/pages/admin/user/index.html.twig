{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des agents{% endblock %}

{% block description %}Liste des agents{% endblock %}

{# jQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/datatables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#table').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json'
                },
            });
        } );
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Listes des agents</h1>


    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin_user_new')}}" class="btn btn-primary shadow"><i class="fas fa-plus"></i> Nouvel agent</a>
    </div>

    <div class="table-responsive">
        <table id="table" class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Contact</th>
                    <th>Pays</th>
                    <th>Crée le</th>
                    <th>Modifié le </th>
                    <th>Options</th>
            </tr>
        </thead>

        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.contact }}</td>
                <td>{{ user.pays }}</td>
                <td>{{user.createdAt|format_datetime()}}</td>
                <td>{{user.updatedAt|format_datetime()}}</td>
                <td class="d-flex align-items-center">
                
                    <a class="mx-2" href="{{ path('admin_user_show', {'id': user.id}) }}"><i class="fa-solid fa-eye align-middle"></i></a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}"><i class="fas fa-edit align-middle"></i></a>
                    <a onclick="event.preventDefault(); return confirm('Attention!!! La suppression de cet agent implique la suppression de toutes les données associées. Confirmer la suppression?') && document.querySelector('#delete_user_{{user.id}}_form').submit();" class="mx-2 text-danger" href=""><i class="fa-solid fa-trash align-middle"></i></a>
                            
                    
                
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Aucun agents trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
