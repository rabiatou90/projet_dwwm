    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#user_roles').select2();
        });
    </script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification des r么les</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{ form_start(form) }}
                <div class="mb-3">
                        <label for="user_roles">Les r么les</label>
                        <div class="text-danger">{{form_errors(form.roles)}}</div>
                        {{form_widget(form.roles, {'attr': {'class': 'form-control', 'id': 'user_roles'}})}}
                    </div>
                <div>
                        <input formnovalidate type="submit" class="btn btn-primary" value="Modifier">
